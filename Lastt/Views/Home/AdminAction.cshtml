@model IEnumerable<Employee>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="">Employee App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AdminAction">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="ShowAllRelations">See All Relations</a>
                    </li>
                </ul>
            </div>
            <div>
                <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
            </div>
        </div>
    </nav>
</header>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee Data</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="ShowAllRelations" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> See All Relations
            </a>
        </div>
    </div>

    <br />
    <br />

    <table class="table table-bordered table-stripped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Employee Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    UserName
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.FirstName @obj.LastName
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.UserName
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        <form asp-controller="Home" asp-action="Delete" method="post">
                            <input type="hidden" name="employeeId" value="@obj.EmpId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
